<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
             xmlns:e="clr-namespace:MvvmElegance.Xaml;assembly=MvvmElegance.Avalonia"
             xmlns:local="using:UserEditor.UI"
             x:Class="UserEditor.UI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <themes:BundledTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Amber" />
                <e:ApplicationLoader>
                    <e:ApplicationLoader.Bootstrapper>
                        <local:Bootstraper />
                    </e:ApplicationLoader.Bootstrapper>
                </e:ApplicationLoader>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>

    <Application.Styles>
        <!--<FluentTheme Mode="Light" />-->
        <!--<StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml"/>-->
        <StyleInclude Source="avares://Material.Avalonia/Material.Avalonia.Templates.xaml" />
    </Application.Styles>
</Application>